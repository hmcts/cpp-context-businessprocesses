{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/bpm/json/schemas/individual.json",
  "type": "object",
  "description": "Individual Details",
  "properties": {
    "driverNumber": {
      "type": "string",
      "description": "Driver number for DVLA case?? is this the same as drivingLicenseNumber",
      "maxLength": 16
    },
    "driverLicenceCode": {
      "type": "string"
    },
    "driverLicenceIssue": {
      "type": "string"
    },
    "nationalInsuranceNumber": {
      "$ref": "http://justice.gov.uk/bpm/json/schemas/bpm-definitions.json#/definitions/nationalInsuranceNumber"
    },
    "selfDefinedInformation": {
      "$ref": "http://justice.gov.uk/bpm/json/schemas/self-defined-information.json"
    },
    "personalInformation": {
      "$ref": "http://justice.gov.uk/bpm/json/schemas/personal-information.json"
    },
    "parentGuardianInformation": {
      "$ref": "http://justice.gov.uk/bpm/json/schemas/parent-guardian-information.json"
    },
    "perceivedBirthYear": {
      "type": "string"
    },
    "custodyStatus": {
      "type": "string"
    },
    "bailConditions": {
      "type": "string",
      "maxLength": 2500
    },
    "offenderCode": {
      "type": "string",
      "description": "Offender Code"
    }
  },
  "required": [
    "personalInformation",
    "selfDefinedInformation"
  ]
}