{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/public-initiated.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "cases": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "hearingDateTime:": {
      "type": "string",
      "format": "date-time"
    },
    "caseDetails": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/hearingCaseDetail"
      }
    },
    "applicationDetails": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/applicationDetail"
      }
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    }
  },
  "required": [
    "hearingId",
    "cases"
  ],
  "definitions": {
    "hearingCaseDetail": {
      "type": "object",
      "properties": {
        "caseId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "caseUrn": {
          "type": "string"
        },
        "defendantDetails": {
          "type": "array",
          "minItems": 0,
          "items": {
            "defendantId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "defendantFirstName": {
              "type": "string"
            },
            "defendantLastName": {
              "type": "string"
            },
            "defendantRemandStatus": {
              "type": "string"
            },
            "interpreterLanguageNeeds": {
              "type": "string"
            }
          }
        }
      }
    },
    "applicationDetail": {
      "type": "object",
      "properties": {
        "applicationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationReference": {
          "type": "string"
        },
        "subject": {
          "type": "object",
          "properties": {
            "defendantId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "defendantFirstName": {
              "type": "string"
            },
            "defendantLastName": {
              "type": "string"
            },
            "defendantRemandStatus": {
              "type": "string"
            },
            "interpreterLanguageNeeds": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
